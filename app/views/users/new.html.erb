<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>

      <%= form_for(@user) do |f| %>  
  <div class="field"> 
    <%= f.text_field :first_name, :placeholder => "First name" %><br>
    <%= f.text_field :last_name, :placeholder => "Last name" %><br>
    <%= f.email_field :email, :placeholder => "Email" %><br>
    <%= f.password_field :password, :placeholder => "Password" %>
  </div> 
  <div class="actions"> 
    <%= f.submit "Create" %> 
  </div> 
<% end %>
  
    </div>
  </div>
</div>
