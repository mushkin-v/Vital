<div class="login">
  <div class="container">
    <div class="form">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="field">
          <div class="alert"><%= @msg %></div>
          <%= f.email_field :email, :placeholder => "Email" %>
          <%= f.password_field :password, :placeholder => "Password" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "btn-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
